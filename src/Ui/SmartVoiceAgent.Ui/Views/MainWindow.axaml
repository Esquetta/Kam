<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:SmartVoiceAgent.Ui.ViewModels"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SmartVoiceAgent.Ui.Views"
		mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="720"
		x:Class="SmartVoiceAgent.Ui.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		Icon="/Assets/avalonia-logo.ico"
		Background="Transparent"
		TransparencyLevelHint="Mica, AcrylicBlur"
		ExtendClientAreaToDecorationsHint="True"
		Title="SmartVoiceAgent.Ui">


	<Window.Styles>
		<Style Selector="Button.NavBtn">
			<Setter Property="Width" Value="50"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="CornerRadius" Value="10"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>

		<Style Selector="Button.NavBtn Path">
			<Setter Property="Fill" Value="#666666"/>
			<Setter Property="Width" Value="24"/> <Setter Property="Height" Value="24"/>
			<Setter Property="Stretch" Value="Uniform"/>
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Fill" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="Button.NavBtn:pointerover /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="Background" Value="#1500F2FF"/>
			<Setter Property="BoxShadow" Value="0 0 15 0 #AA00F2FF"/>
		</Style>

		<Style Selector="Button.NavBtn:pointerover Path">
			<Setter Property="Fill" Value="#00F2FF"/>
		</Style>

		<Style Selector="Button.NavBtn[Tag=Active] /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="Background" Value="#2000F2FF"/>
			<Setter Property="BorderBrush" Value="#00F2FF"/>
			<Setter Property="BoxShadow" Value="0 0 15 0 #AA00F2FF"/>
	</Style>

		<Style Selector="Button.NavBtn[Tag=Active] Path">
			<Setter Property="Fill" Value="#00F2FF"/>
		</Style>
		<Style Selector="Border.AgentCard">
			<Setter Property="Background" Value="#110F0F11"/> <Setter Property="CornerRadius" Value="16"/>
			<Setter Property="BorderBrush" Value="#1AFFFFFF"/> <Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BoxShadow" Value="0 10 30 0 #33000000"/>
			<Setter Property="Margin" Value="10"/>
		</Style>
	</Window.Styles>
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
				BackgroundSource="None"
				TintColor="#050505"
				TintOpacity="0.95"
				MaterialOpacity="0.85" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Grid ColumnDefinitions="65, *">

			<Border Grid.Column="0"
					Background="#0A0A0C"
					BorderBrush="#1AFFFFFF"
					BorderThickness="0,0,1,0">
				<Grid RowDefinitions="Auto, *, Auto" Margin="0,20">
					<StackPanel Grid.Row="1" Spacing="15" HorizontalAlignment="Center">

						<Button Classes="NavBtn" Tag="Active">
							<Path Data="M12,2L2,12L12,22L22,12L12,2M12,5L19,12L12,19L5,12L12,5Z"/>
						</Button>

						<Button Classes="NavBtn">
							<Viewbox Width="24" Height="24">
								<Path Data="M12,2L2,22H22L12,2M12,6L19.5,20H4.5L12,6Z"/>
							</Viewbox>
						</Button>

						<Button Classes="NavBtn">
							<Path Data="M10.59,13.41L14.59,9.41L13.17,8L9.17,12L10.59,13.41M14.59,14.59L18.59,10.59L17.17,9.17L13.17,13.17L14.59,14.59M5.93,17.17C5.54,16.78 5.34,16.3 5.34,15.81C5.34,15.32 5.53,14.84 5.92,14.45L8.75,11.62L7.34,10.21L4.5,13.04C3.72,13.82 3.33,14.82 3.33,15.81C3.33,16.81 3.72,17.81 4.5,18.58C6.07,20.14 8.6,20.14 10.17,18.58L13,15.75L11.59,14.34L8.76,17.17C8.37,17.56 7.89,17.75 7.4,17.75C6.91,17.75 6.42,17.56 6.03,17.17L5.93,17.17Z"/>
						</Button>

					</StackPanel>

					<Button Grid.Row="2" Classes="NavBtn" HorizontalAlignment="Center">
						<Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11.03L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.97 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11.03C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.95C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
					</Button>
				</Grid>
			</Border>

			<Panel Grid.Column="1">
				<Grid Grid.Column="1" Margin="30" RowDefinitions="*, *" ColumnDefinitions="*, 1.6*, *">

					<Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Classes="AgentCard">
						<Grid RowDefinitions="Auto, *">
							<Border Grid.Row="0" Padding="20">
								<StackPanel>
									<TextBlock Text="RESEARCH_ENGINE" Classes="AgentHeader" Foreground="#BF5AF2"/>
									<Separator Background="#1AFFFFFF" Height="1" Margin="0,10,0,0"/>
								</StackPanel>
							</Border>

							<ScrollViewer Grid.Row="1">
								<Border Padding="20,0,20,20">
									<TextBlock Text="{Binding ResearchLogs}"
											   Foreground="#888"
											   FontSize="11"
											   FontFamily="Consolas"
											   TextWrapping="Wrap"/>
								</Border>
							</ScrollViewer>
						</Grid>
					</Border>

					<Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="20">
						<local:NeuralOrb x:Name="OrbControl"
										 HorizontalAlignment="Stretch"
										 VerticalAlignment="Stretch"
										 ActiveColor="#00F2FF"/>
					</Grid>

					<Border Grid.Row="0" Grid.Column="2" Classes="AgentCard" Padding="20">
						<StackPanel Spacing="15">
							<TextBlock Text="TASK_SCHEDULER" Classes="AgentHeader" Foreground="#FF9F0A"/>
							<ProgressBar Value="{Binding TaskProgress}" Height="3" Foreground="#FF9F0A"/>
						</StackPanel>
					</Border>

					<Border Grid.Row="1" Grid.Column="2" Classes="AgentCard" Padding="20">
						<StackPanel>
							<TextBlock Text="SYSTEM_ANALYZER" Classes="AgentHeader" Foreground="#30D158"/>
							<Canvas Height="80" Margin="0,10">
								<Polyline Points="0,60 20,40 40,55 60,10 80,45 120,30"
										  Stroke="#30D158"
										  StrokeThickness="1.5"
										  Opacity="0.6"/>
							</Canvas>
						</StackPanel>
					</Border>
				</Grid>
			</Panel>

		</Grid>
	</Panel>
</Window>