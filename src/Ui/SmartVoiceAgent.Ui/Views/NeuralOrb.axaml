<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:SmartVoiceAgent.Ui.ViewModels"
			 x:Class="SmartVoiceAgent.Ui.Views.NeuralOrb">
	<UserControl.Styles>
		<Style Selector="Ellipse.OrbGlow">
			<Style.Animations>
				<Animation Duration="0:0:1" IterationCount="Infinite" PlaybackDirection="Alternate">
					<KeyFrame KeyTime="0:0:0">
						<Setter Property="Opacity" Value="0.3"/>
						<Setter Property="ScaleTransform.ScaleX" Value="1.0"/>
						<Setter Property="ScaleTransform.ScaleY" Value="1.0"/>
					</KeyFrame>
					<KeyFrame KeyTime="0:0:1">
						<Setter Property="Opacity" Value="0.6"/>
						<Setter Property="ScaleTransform.ScaleX" Value="1.2"/>
						<Setter Property="ScaleTransform.ScaleY" Value="1.2"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</UserControl.Styles>

	<Panel>
		<Ellipse Classes="OrbGlow"
				 Fill="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CurrentOrbColor}"
				 Width="150" Height="150">
			<Ellipse.RenderTransform>
				<ScaleTransform/>
			</Ellipse.RenderTransform>
			<Ellipse.Effect>
				<BlurEffect Radius="50"/>
			</Ellipse.Effect>
		</Ellipse>

		<Ellipse Fill="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CurrentOrbColor}"
				 Width="100" Height="100"/>
	</Panel>
</UserControl>