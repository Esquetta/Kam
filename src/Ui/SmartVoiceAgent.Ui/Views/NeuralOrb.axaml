<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SmartVoiceAgent.Ui.Views.NeuralOrb">
	<UserControl.Styles>
		<Style Selector="Ellipse.OrbCore">
			<Style.Animations>
				<Animation Duration="0:0:3" IterationCount="Infinite">
					<KeyFrame KeyTime="0:0:0">
						<Setter Property="ScaleTransform.ScaleX" Value="0.95"/>
						<Setter Property="ScaleTransform.ScaleY" Value="0.95"/>
						<Setter Property="Opacity" Value="0.7"/>
					</KeyFrame>
					<KeyFrame KeyTime="0:0:1.5">
						<Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
						<Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
						<Setter Property="Opacity" Value="1.0"/>
					</KeyFrame>
					<KeyFrame KeyTime="0:0:3">
						<Setter Property="ScaleTransform.ScaleX" Value="0.95"/>
						<Setter Property="ScaleTransform.ScaleY" Value="0.95"/>
						<Setter Property="Opacity" Value="0.7"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</UserControl.Styles>

	<Panel VerticalAlignment="Center" HorizontalAlignment="Center">
		<Ellipse Fill="#00F2FF" Width="140" Height="140" Opacity="0.1">
			<Ellipse.Effect><BlurEffect Radius="30"/></Ellipse.Effect>
		</Ellipse>
		<Ellipse Name="OrbCore" Classes="OrbCore" Fill="#00F2FF" Width="100" Height="100" RenderTransformOrigin="50%,50%">
			<Ellipse.RenderTransform><ScaleTransform/></Ellipse.RenderTransform>
		</Ellipse>
	</Panel>
</UserControl>