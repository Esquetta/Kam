<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="SmartVoiceAgent.Ui.Views.NeuralOrb">

	<UserControl.Styles>
		<Style Selector="Ellipse.OrbCore">
			<Style.Animations>
				<Animation Duration="0:0:2" IterationCount="Infinite">
					<KeyFrame KeyTime="0:0:0">
						<Setter Property="ScaleTransform.ScaleX" Value="1.0"/>
						<Setter Property="ScaleTransform.ScaleY" Value="1.0"/>
						<Setter Property="Opacity" Value="0.8"/>
					</KeyFrame>
					<KeyFrame KeyTime="0:0:1">
						<Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
						<Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
						<Setter Property="Opacity" Value="1.0"/>
					</KeyFrame>
					<KeyFrame KeyTime="0:0:2">
						<Setter Property="ScaleTransform.ScaleX" Value="1.0"/>
						<Setter Property="ScaleTransform.ScaleY" Value="1.0"/>
						<Setter Property="Opacity" Value="0.8"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</UserControl.Styles>

	<Panel VerticalAlignment="Center" HorizontalAlignment="Center">
		
		<Ellipse Fill="Cyan" Width="120" Height="120" Opacity="0.15">
			<Ellipse.Effect>
				<BlurEffect Radius="20"/>
			</Ellipse.Effect>
		</Ellipse>

		<Ellipse Name="OrbCore" 
				 Classes="OrbCore"
				 Fill="Cyan" 
				 Width="100" 
				 Height="100">
			<Ellipse.RenderTransform>
				<ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
			</Ellipse.RenderTransform>
		</Ellipse>
		
	</Panel>
</UserControl>