<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SmartVoiceAgent.Ui.ViewModels.PageModels"
             xmlns:local="clr-namespace:SmartVoiceAgent.Ui.Views"
             xmlns:services="clr-namespace:SmartVoiceAgent.Ui.Services"
             xmlns:converters="clr-namespace:SmartVoiceAgent.Ui.Converters"
             x:Class="SmartVoiceAgent.Ui.Views.CoordinatorView"
             x:DataType="vm:CoordinatorViewModel">

    <UserControl.Resources>
        <services:WindowStateManager x:Key="WindowStateManager" />
        <converters:ResponsiveFontSizeConverter x:Key="ResponsiveFontSizeConverter" />
        <converters:ResponsiveScaleConverter x:Key="ResponsiveScaleConverter" />
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid RowDefinitions="Auto, Auto, Auto" Margin="0,20">

            <!-- Title Section -->
            <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,40">
                <TextBlock Text="{DynamicResource Lang.Coordinator.Title}"
                           FontSize="{Binding Source={StaticResource WindowStateManager}, Path=WindowWidth, Converter={StaticResource ResponsiveFontSizeConverter}, ConverterParameter=56}"
                           LetterSpacing="12"
                           HorizontalAlignment="Center"
                           Foreground="{Binding LabelColor, Mode=OneWay}"
                           FontWeight="Light"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" Spacing="12">
                    <!-- Status Badge Background -->
                    <Border Background="{Binding OrbColor, Mode=OneWay, Converter={StaticResource BrushToGlowBrushConverter}}"
                            BorderBrush="{Binding OrbColor, Mode=OneWay}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,4"
                            Opacity="0.3">
                        <TextBlock Text="KERNEL v3.5"
                                   FontSize="11"
                                   FontFamily="Consolas"
                                   Foreground="{Binding OrbColor, Mode=OneWay}"
                                   LetterSpacing="1"/>
                    </Border>
                    <TextBlock Text="//"
                               FontSize="11"
                               Foreground="{DynamicResource TextMutedBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusText, Mode=OneWay}"
                               FontSize="11"
                               FontFamily="Consolas"
                               Foreground="{Binding StatusColor, Mode=OneWay}"
                               LetterSpacing="2"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>

            <!-- Neural Orb -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,60">
                <Viewbox Width="{Binding Source={StaticResource WindowStateManager}, Path=WindowWidth, Converter={StaticResource ResponsiveScaleConverter}, ConverterParameter=260}" 
                         Height="{Binding Source={StaticResource WindowStateManager}, Path=WindowWidth, Converter={StaticResource ResponsiveScaleConverter}, ConverterParameter=260}">
                    <local:NeuralOrb 
                        IsActive="{Binding IsOnline, Mode=OneWay}"
                        ToggleCommand="{Binding ToggleOnlineStateCommand}"
                        OrbColor="{Binding OrbColor, Mode=OneWay}"
                        RingOpacity="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter=0.3|0.1}"
                        CoreOpacity="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter=0.65|0.3}"
                        BoxShadowValue="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToBoxShadowConverter}, ConverterParameter='0 0 40 0 #4006B6D4|0 0 20 0 #40EF4444'}"/>
                </Viewbox>
            </Grid>

            <!-- Bottom Cards - Responsive Grid -->
            <ItemsControl Grid.Row="2" Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding Source={StaticResource WindowStateManager}, Path=GridColumns}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <!-- Research Card -->
                <Border Classes="InfoCard" Margin="8">
                    <Border.Styles>
                        <Style Selector="Border.InfoCard:pointerover">
                            <Setter Property="BorderBrush" Value="{Binding ResearchStatusColor, Mode=OneWay}"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Grid Width="8" Height="8" Margin="0,0,12,0">
                                <Ellipse Width="8" Height="8" Fill="{Binding ResearchStatusColor, Mode=OneWay}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="4"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="8" Height="8" Fill="{Binding ResearchStatusColor, Mode=OneWay}"/>
                            </Grid>
                            <TextBlock Text="{DynamicResource Lang.Coordinator.Research}"
                                       Foreground="{Binding LabelColor, Mode=OneWay}"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LetterSpacing="2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToStatusTextConverter}, ConverterParameter='19:18:35  Local kernel initialized|19:18:35  Service offline'}"
                                   Foreground="{Binding ResearchStatusColor, Mode=OneWay}"
                                   Opacity="0.8"
                                   FontSize="10"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Analyzer Card -->
                <Border Classes="InfoCard" Margin="8">
                    <Border.Styles>
                        <Style Selector="Border.InfoCard:pointerover">
                            <Setter Property="BorderBrush" Value="{Binding AnalyzerStatusColor, Mode=OneWay}"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Grid Width="8" Height="8" Margin="0,0,12,0">
                                <Ellipse Width="8" Height="8" Fill="{Binding AnalyzerStatusColor, Mode=OneWay}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="4"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="8" Height="8" Fill="{Binding AnalyzerStatusColor, Mode=OneWay}"/>
                            </Grid>
                            <TextBlock Text="{DynamicResource Lang.Coordinator.Analyzer}"
                                       Foreground="{Binding LabelColor, Mode=OneWay}"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LetterSpacing="2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToStatusTextConverter}, ConverterParameter='19:18:42  Semantic engine active|19:18:42  Engine offline'}"
                                   Foreground="{Binding AnalyzerStatusColor, Mode=OneWay}"
                                   Opacity="0.8"
                                   FontSize="10"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Tasks Card -->
                <Border Classes="InfoCard" Margin="8">
                    <Border.Styles>
                        <Style Selector="Border.InfoCard:pointerover">
                            <Setter Property="BorderBrush" Value="{Binding TasksStatusColor, Mode=OneWay}"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Grid Width="8" Height="8" Margin="0,0,12,0">
                                <Ellipse Width="8" Height="8" Fill="{Binding TasksStatusColor, Mode=OneWay}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="4"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="8" Height="8" Fill="{Binding TasksStatusColor, Mode=OneWay}"/>
                            </Grid>
                            <TextBlock Text="{DynamicResource Lang.Coordinator.Tasks}"
                                       Foreground="{Binding LabelColor, Mode=OneWay}"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LetterSpacing="2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToStatusTextConverter}, ConverterParameter='18:18:38  Scheduler ready|18:18:38  Scheduler offline'}"
                                   Foreground="{Binding TasksStatusColor, Mode=OneWay}"
                                   Opacity="0.8"
                                   FontSize="10"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Border>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>
