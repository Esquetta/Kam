<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SmartVoiceAgent.Ui.ViewModels.PageModels"
             xmlns:local="clr-namespace:SmartVoiceAgent.Ui.Views"
             xmlns:services="clr-namespace:SmartVoiceAgent.Ui.Services"
             xmlns:converters="clr-namespace:SmartVoiceAgent.Ui.Converters"
             x:Class="SmartVoiceAgent.Ui.Views.CoordinatorView"
             x:DataType="vm:CoordinatorViewModel">

    <UserControl.Resources>
        <services:WindowStateManager x:Key="WindowStateManager" />
        <converters:ResponsiveFontSizeConverter x:Key="ResponsiveFontSizeConverter" />
        <converters:ResponsiveScaleConverter x:Key="ResponsiveScaleConverter" />
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid RowDefinitions="Auto, Auto, Auto" Margin="0,20">

            <!-- Title Section -->
            <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,40">
                <TextBlock Text="{DynamicResource Lang.Coordinator.Title}"
                           FontSize="{Binding Source={StaticResource WindowStateManager}, Path=WindowWidth, Converter={StaticResource ResponsiveFontSizeConverter}, ConverterParameter=56}"
                           LetterSpacing="12"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontWeight="Light"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" Spacing="12">
                    <Border Background="{DynamicResource AccentCyanGlowBrush}"
                            BorderBrush="{DynamicResource AccentCyanDimBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,4">
                        <TextBlock Text="KERNEL v3.5"
                                   FontSize="11"
                                   FontFamily="Consolas"
                                   Foreground="{DynamicResource AccentCyanBrush}"
                                   LetterSpacing="1"/>
                    </Border>
                    <TextBlock Text="//"
                               FontSize="11"
                               Foreground="{DynamicResource TextMutedBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource Lang.Coordinator.Subtitle}"
                               FontSize="11"
                               FontFamily="Consolas"
                               Foreground="{DynamicResource AccentCyanDimBrush}"
                               LetterSpacing="2"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Neural Orb -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,60">
                <Viewbox Width="{Binding Source={StaticResource WindowStateManager}, Path=WindowWidth, Converter={StaticResource ResponsiveScaleConverter}, ConverterParameter=260}" 
                         Height="{Binding Source={StaticResource WindowStateManager}, Path=WindowWidth, Converter={StaticResource ResponsiveScaleConverter}, ConverterParameter=260}">
                    <local:NeuralOrb/>
                </Viewbox>
            </Grid>

            <!-- Bottom Cards - Responsive Grid -->
            <ItemsControl Grid.Row="2" Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding Source={StaticResource WindowStateManager}, Path=GridColumns}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <!-- Research Card -->
                <Border Classes="InfoCard" Margin="8">
                    <Border.Styles>
                        <Style Selector="Border.InfoCard:pointerover">
                            <Setter Property="BorderBrush" Value="{DynamicResource AccentPurpleBrush}"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Grid Width="8" Height="8" Margin="0,0,12,0">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentPurpleBrush}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="4"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentPurpleBrush}"/>
                            </Grid>
                            <TextBlock Text="{DynamicResource Lang.Coordinator.Research}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LetterSpacing="2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="19:18:35  Local kernel initialized"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   FontSize="10"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Analyzer Card -->
                <Border Classes="InfoCard" Margin="8">
                    <Border.Styles>
                        <Style Selector="Border.InfoCard:pointerover">
                            <Setter Property="BorderBrush" Value="{DynamicResource AccentGreenBrush}"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Grid Width="8" Height="8" Margin="0,0,12,0">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentGreenBrush}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="4"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentGreenBrush}"/>
                            </Grid>
                            <TextBlock Text="{DynamicResource Lang.Coordinator.Analyzer}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LetterSpacing="2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="19:18:42  Semantic engine active"
                                   Foreground="{DynamicResource AccentGreenBrush}"
                                   Opacity="0.8"
                                   FontSize="10"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Tasks Card -->
                <Border Classes="InfoCard" Margin="8">
                    <Border.Styles>
                        <Style Selector="Border.InfoCard:pointerover">
                            <Setter Property="BorderBrush" Value="{DynamicResource AccentOrangeBrush}"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Grid Width="8" Height="8" Margin="0,0,12,0">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentOrangeBrush}">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="4"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentOrangeBrush}"/>
                            </Grid>
                            <TextBlock Text="{DynamicResource Lang.Coordinator.Tasks}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LetterSpacing="2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="18:18:38  Scheduler ready"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   FontSize="10"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Border>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>
