<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SmartVoiceAgent.Ui.ViewModels.PageModels"
             x:Class="SmartVoiceAgent.Ui.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Grid RowDefinitions="Auto, *">
        
        <!-- Title Section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,40">
            <TextBlock Text="{DynamicResource Lang.Settings.Title}"
                       FontSize="48"
                       LetterSpacing="25"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       FontWeight="Light"/>
            <TextBlock Text="{DynamicResource Lang.Settings.Subtitle}"
                       Foreground="{DynamicResource AccentCyanBrush}"
                       Opacity="0.6"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"
                       FontSize="11"
                       LetterSpacing="2"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20" Spacing="20" MaxWidth="800">
                
                <!-- Appearance Section -->
                <Border Classes="InfoCard">
                    <StackPanel Spacing="15">
                        <TextBlock Text="{DynamicResource Lang.Settings.Appearance}"
                                   Foreground="{DynamicResource AccentCyanBrush}"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   LetterSpacing="2"/>
                        
                        <StackPanel Spacing="10">
                            <TextBlock Text="{DynamicResource Lang.Settings.ThemeMode}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{DynamicResource Lang.Settings.ThemeDesc}"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       FontSize="10"
                                       Margin="0,0,0,5"/>

                             <!-- Language Selector -->
                            <TextBlock Text="{DynamicResource Lang.Settings.Language}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontSize="12"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="{DynamicResource Lang.Settings.LanguageDesc}"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       FontSize="10"
                                       Margin="0,0,0,5"/>
                            <ComboBox SelectedIndex="{Binding SelectedLanguageIndex}"
                                      HorizontalAlignment="Stretch">
                                <ComboBoxItem>English</ComboBoxItem>
                                <ComboBoxItem>Español</ComboBoxItem>
                                <ComboBoxItem>Français</ComboBoxItem>
                                <ComboBoxItem>Deutsch</ComboBoxItem>
                                <ComboBoxItem>中文</ComboBoxItem>
                                <ComboBoxItem>日本語</ComboBoxItem>
                                <ComboBoxItem>Türkçe</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- System Section -->
                <Border Classes="InfoCard">
                    <StackPanel Spacing="15">
                        <TextBlock Text="{DynamicResource Lang.Settings.System}"
                                   Foreground="{DynamicResource AccentPurpleBrush}"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   LetterSpacing="2"/>
                        
                        <StackPanel Spacing="10">
                            <TextBlock Text="{DynamicResource Lang.Settings.KernelVersion}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{DynamicResource Lang.Settings.KernelVersionVal}"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       FontSize="10"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Classes="InfoCard">
                    <StackPanel Spacing="15">
                        <TextBlock Text="{DynamicResource Lang.Settings.About}"
                                   Foreground="{DynamicResource AccentOrangeBrush}"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   LetterSpacing="2"/>
                        
                        <StackPanel Spacing="10">
                            <TextBlock Text="{DynamicResource Lang.AppName}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{DynamicResource Lang.AppDesc}"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       FontSize="10"
                                       TextWrapping="Wrap"
                                       LineHeight="16"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

