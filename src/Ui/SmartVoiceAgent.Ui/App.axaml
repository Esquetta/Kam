<Application
xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:converters="clr-namespace:SmartVoiceAgent.Ui.Converters"
x:Class="SmartVoiceAgent.Ui.App"
RequestedThemeVariant="Dark">


	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://SmartVoiceAgent.Ui/Themes/AppTheme.axaml"/>
                <ResourceInclude Source="avares://SmartVoiceAgent.Ui/Assets/Lang/en-US.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:BoolToBoxShadowConverter x:Key="BoolToBoxShadowConverter" />
            <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter" />
            <converters:BrushToGlowBrushConverter x:Key="BrushToGlowBrushConverter" />
            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
		</ResourceDictionary>
	</Application.Resources>


	<Application.Styles>
		<FluentTheme />
		<StyleInclude
		Source="avares://SmartVoiceAgent.Ui/Themes/Controls.axaml"/>
	</Application.Styles>

</Application>
