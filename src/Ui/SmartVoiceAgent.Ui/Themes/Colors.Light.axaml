<ResourceDictionary xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Backgrounds -->
	<Color x:Key="AppBg">#F4F7FB</Color>
	<Color x:Key="PanelBg">#FFFFFF</Color>
	<Color x:Key="CardBg">#EDF1F6</Color>

	<!-- Text -->
	<Color x:Key="TextPrimary">#0E1A24</Color>
	<Color x:Key="TextMuted">#5C6F82</Color>

	<!-- Accents (aynı hue, daha soft) -->
	<Color x:Key="AccentCyan">#007ACC</Color>
	<Color x:Key="AccentGreen">#00B37A</Color>
	<Color x:Key="AccentPurple">#7A5CFA</Color>
	<Color x:Key="AccentOrange">#FF9800</Color>
	<Color x:Key="AccentError">#D32F2F</Color>
</ResourceDictionary>
